<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:vm="clr-namespace:HospitalApp.ViewModels"
            xmlns:models="clr-namespace:HospitalApp.Models"
            mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="1024"
            x:Class="HospitalApp.Views.DoctorPageView"
            x:DataType="vm:DoctorPageViewModel">

    <UserControl.Styles>
        <!-- TextBox Style -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- ListBox Styles -->
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Background" Value="#E0F0FF"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="#4CA6FF"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        
        <Style Selector="TextBox:focus">
            <Setter Property="Background" Value="#009BFF"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="White"/>
        </Style>

        <!-- Header Text Style -->
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Search Box Style -->
        <Style Selector="TextBox.search">
            <Setter Property="Background" Value="#9BD8F6"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        
        <!-- Card Container Style -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BoxShadow" Value="2 2 8 0 #00000020"/>
        </Style>

        <!-- ListBox Style -->
        <Style Selector="ListBox">
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        
        <!-- Button Style for action buttons -->
        <Style Selector="Button.action">
            <Setter Property="Background" Value="#4CA6FF"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        
        <!-- Hover effect for action buttons -->
        <Style Selector="Button.action:pointerover">
            <Setter Property="Background" Value="#6BB8FF"/>
        </Style>

        <!-- Button Style for small buttons -->
        <Style Selector="Button.small">
            <Setter Property="Background" Value="#4CA6FF"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Styles>

    <Grid Background="#E6F2FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="Doctors"
                       Classes="header"/>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- command bind -->
                <Button Classes="action" Command="{Binding EditDoctorCommand}">
                    <TextBlock Text="Edit Doctor" Foreground="Black" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button Classes="action" Command="{Binding AddDoctorCommand}">
                    <TextBlock Text="Add Doctor" Foreground="Black" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left side - Doctor List -->
            <Border Grid.Column="0" 
                    Classes="card" 
                    Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBox Grid.Row="0" 
                             Classes="search"
                             Watermark="Search Doctor"
                             Text="{Binding SearchText}"
                             IsEnabled="True"
                             Margin="10"
                             Foreground="Black"/>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding FilteredDoctors}"
                             SelectedItem="{Binding SelectedDoctor}"
                             Margin="10,0" 
                             Background="White"
                             Foreground="Black">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="models:Doctor">
                                <TextBlock Text="{Binding Name}" FontSize="14" Foreground="Black"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Right side - Doctor Details (Expanded) -->
            <Border Grid.Column="1" 
                    Classes="card" 
                    Margin="5,0,0,0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Doctor Details" Foreground="Black" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <!-- Doctor Details Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedDoctor.Name}" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="Black"/>
                            
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" Margin="0,0,0,20">
                                <!-- ID -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Foreground="Black" Text="ID:" FontWeight="SemiBold" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedDoctor.Id}" IsReadOnly="True" Margin="0,0,0,15" Foreground="Black"/>
                                
                                <!-- NAME -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Foreground="Black" Text="Name:" FontWeight="SemiBold" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedDoctor.Name}" IsReadOnly="{Binding !IsEditing}" Margin="0,0,0,15" Foreground="Black"/>

                                <!-- Email -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Foreground="Black" Text="Email:" FontWeight="SemiBold" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedDoctor.Email}" IsReadOnly="{Binding !IsEditing}" Margin="0,0,0,15" Foreground="Black"/>

                                <!-- Specialization -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Foreground="Black" Text="Specialization:" FontWeight="SemiBold" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SelectedDoctor.specialization}" IsReadOnly="True" Margin="0,0,0,15" Foreground="Black"/>

                                <!-- Is Available -->
                                <TextBlock Grid.Row="4" Grid.Column="0" Foreground="Black" Text="Is Available:" FontWeight="SemiBold" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SelectedDoctor.is_available}" IsReadOnly="True" Margin="0,0,0,15" Foreground="Black"/>

                                <!-- Username -->
                                <TextBlock Grid.Row="5" Grid.Column="0" Foreground="Black" Text="Username:" FontWeight="SemiBold" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding SelectedDoctor.Username}" IsReadOnly="True" Margin="0,0,0,15" Foreground="Black"/>

                                <!-- Password -->
                                <TextBlock Grid.Row="6" Grid.Column="0" Foreground="Black" Text="Password:" FontWeight="SemiBold" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding SelectedDoctor.Password}" IsReadOnly="True" Margin="0,0,0,15" Foreground="Black"/>
                                
                                <!-- Sex -->
                                <TextBlock Grid.Row="7" Grid.Column="0" Foreground="Black" Text="Sex:" FontWeight="SemiBold" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding SelectedDoctor.Sex}" IsReadOnly="True" Margin="0,0,0,15" Foreground="Black"/>

                                <!-- Contact Number -->
                                <TextBlock Grid.Row="8" Grid.Column="0" Foreground="Black" Text="Contact Number:" FontWeight="SemiBold" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding SelectedDoctor.ContactNumber}" IsReadOnly="{Binding !IsEditing}" Margin="0,0,0,15" Foreground="Black"/>

                                <!-- Age -->
                                <TextBlock Grid.Row="9" Grid.Column="0" Foreground="Black" Text="Age:" FontWeight="SemiBold" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding SelectedDoctor.Age}" IsReadOnly="True" Margin="0,0,0,15" Foreground="Black"/>
                                
                                <!-- Birthday -->
                                <TextBlock Grid.Row="10" Grid.Column="0" Foreground="Black" Text="Birthday:" FontWeight="SemiBold" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <DatePicker Grid.Row="10" Grid.Column="1" SelectedDate="{Binding SelectedDoctor.Birthday}" IsEnabled="{Binding IsEditing}" Margin="0,0,0,15"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>